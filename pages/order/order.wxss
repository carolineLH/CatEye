.image  image{
    width: 100px;
    height: 140px;
    margin: auto;
    display: block;
}
.desc {
    margin: 20px 15px 0;
}
.clear {
    clear: both;
}
text {
    display: inline-block;
    margin-top: 10px;
    font-size: 16px;
}
.abloutCinema .cinema {
    margin-top: 10px;
}
.price {
    color: red;
}
.hui {
    color: #777;
}
.foot {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    height: 40px;
    line-height: 40px;
    position: fixed;
    bottom: 0;
}
.foot .item {
    width: 100%;
    color: #ffffff;
    display: inline-block;
    text-align: center;
}
.foot .buyIt {
    background: #e64340;
}
.show-popup{
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height: 100%;
    z-index: 4;
  }
.popup-mask{
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 5;
  }
.popup-contents{
    position: fixed;
    left: 0;
    bottom: 0;
    width:100%;
    background-color: #fff;
    z-index: 6;
  }
.buy-num-box{
    display: flex;
    justify-content: space-between;
    padding: 30rpx 30rpx 48rpx 0;
    margin-left: 30rpx; 
    border-top: 1px solid #eee;
    margin-top: 30rpx;
    align-items: center;
 }
.num-label{
   font-size:26rpx;
   color:#000000;
 }
.buy-num-box .num-box{
      display: flex;
 }
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
    font-size: 28rpx;
  }
.buy-num-box .num-box .num-input input{
    height: 100%;
  }
.buy-num-box .num-box .hui{
    background-color: #f5f5f9;
  }
.popup-join-btn{
    width: 100%;
    height: 89rpx;
    text-align: center;
    line-height: 89rpx;
    font-size:34rpx;
    color:#ffffff;
    background-color: #e64340;
  }