.container {
    background-color: #f2f2f2;
    position: relative;
}

.header {
    width: 100%;
    height: 40px;
    display: flex;
    background: #fff;
    border-bottom: 1px solid #eaeaea;
    background: #f5f5f5;
}

.header .header_hd {
    width: 75px;
    height: 45px;
    line-height: 45px;
    color: #b9b9b9;
    font-size: 12px;
    padding-left: 12px;
    display: flex;
    justify-content: left;
    align-items: center;
}

.header .header_hd text {
    font-size: 14px;
    color: #666;
}

.item-left {
    padding: 10px;
}

.item {
    background-color: #fff;
    color: #787878;
    border-bottom: 1px solid #eaeaea;
    border-left: 0;
    border-right: 0;
}

.downtips {
    width: 0px;
    height: 0px;
    float: left;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #b9b9b9;
    margin-left: 1px;
}

.item-left_title {
    font-size: 14px;
    color: #000;
    margin-bottom: 5px;
}

.item-left_score {
    font-size: 14px;
    color: #ef4238;
}

.priceStart {
    font-size: 10px;
}

.gray_hover {
    background: #eaeaea;
}

.item-left_address {
    font-size: 12px;
    color: #b8b8b8;
}

.mark {
    font-size: 12px;
    border: 1px solid #589daf;
    border-radius: 2px;
    padding: 1px 2px 1px 2px;
    margin-right: 5px;
}

.Discount-desc,
.Discount-card {
    font-size: 12px;
    color: #b8b8b8;
    margin-top: 5px;
}

.Discount-desc text {
    background: #ff9900;
    color: #fff;
    font-size: 12px;
    padding: 2px;
    border-radius: 2px;
    margin-right: 5px;
}

.Discount-card text {
    background: #a97be0;
    color: #fff;
    font-size: 12px;
    padding: 2px;
    border-radius: 2px;
    margin-right: 5px;
}

.item-right {
    float: right;
    /*position: absolute;*/
    margin-top: -80px;
    font-size: 14px;
    color: #b8b8b8;
}

.item-right .item-right_distance {
    margin-right: 10px;
}

.input {
    display: block;
    width: 230px;
    height: 24px;
    border: 1px solid #e6e6e6;
    margin: 8px 0;
    border-radius: 5px;
    background: #fff;
    color: #d3d3d3;
    text-align: center;
    line-height: 27px;
    font-size: 12px;
    margin-right: 10px;
}
@media screen and (min-width: 360px) {
    .header_bd input {
        width: 250px;
    }
}